{
	"name": "remark-asciinema",
	"type": "module",
	"version": "1.0.0",
	"license": "MIT",
	"description": "A remark plugin that transforms Asciinema links into embedded players or screenshots.",
	"author": {
		"email": "stephanrandle@hotmail.com",
		"name": "Stephan Randle",
		"url": "https://stephanrandle.netlify.app/"
	},
	"scripts": {
		"build": "tsup",
		"prepublish": "tsup",
		"prepublishOnly": "npm run build",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest run --ui"
	},
	"files": [
		"dist",
		"package.json"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./package.json": "./package.json"
	},
	"devDependencies": {
		"remark": "^15.0.1",
		"tsup": "^8.3.6",
		"unist-builder": "^4.0.0",
		"unist-util-is": "^6.0.0",
		"unist-util-visit": "^5.0.0"
	}
}
